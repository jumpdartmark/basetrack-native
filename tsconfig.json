{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "jest",
      "expo-location"
    ],
    "paths": {
      "*": ["types/*.d.ts"]
    },
    "allowJs": true
  }
}
